{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES5",
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strict": true,
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "Node"
        }
    }
}